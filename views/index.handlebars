<div class="container">

  <!-- Header image slider -->
  <div id="slides" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
      <li data-target="#slides" data-slide-to="0" class="active"></li>
      <li data-target="#slides" data-slide-to="1"></li>
      <li data-target="#slides" data-slide-to="2"></li>
    </ul>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="./images/blue_globe_background.jpg" alt="background_1">
        <div class="carousel-caption">
          <h1 class="display-2">TOP ARTS NEWS SCRAPPER</h1>
          <h3>Business Insider Edition</h3>
          <button class="btn btn-outline-light btn-lg" id="view-button">SCRAPE NEW ARTICLES</button>
          <button class="btn btn-primary btn-lg" id="save-button">CLEAR RESULTS</button>
        </div>
      </div>
      <div class="carousel-item">
        <img src="./images/digitalBrain_background.jpeg" alt="background_2">
      </div>
      <div class="carousel-item">
        <img src="./images/blue_globe_background.jpg" alt="background_3">
      </div>
    </div>
    <a class="carousel-control-prev" href="#slides" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#slides" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  {{#unless articles.length}}
    <div class="row">
    
    {{#each articles}}
      <div class="card">
        <div class="card-header bg-secondary text-white">{{this.title}}</div>
          <div class="card-body">{{this.link}}
          <button type="button" class="btn btn-primary" id="save-button">Save</button>
        </div>
      </div>
    {{/each}}
    </div>
  {{/unless}}
</div>