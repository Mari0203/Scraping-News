<div class="container-fluid">
  <a href="/scrape" class="btn btn-primary">scrape</a>

  <a href="/saved" class="btn btn-primary">saved article</a>
  <a href="/clear" id="clear" class="btn btn-primary">clear article</a>

  {{!-- Navbar --}}
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">NEWS SCRAPPER</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link" href="/saved">Saved Articles</a>
      </div>
    </div>
    <form class="form-inline">
      <button class="btn btn-outline-success" type="button" id="scrape" <a href="/scrape"></a>>Scrape</button>
      <button class="btn btn-outline-danger" type="button" id="clear" <a href="/clear"></a>Clear All</button>
    </form>
  </nav>

  {{!-- Jumbotron / Title --}}
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4 text-center">News Scraper</h1>
      <p class="lead text-center">New York Times | Arts</p>
    </div>
  </div>

  {{!-- Cards / Article Results --}}
  {{#if articles.length}}
  <div class="row">

    {{#each articles}}
    <br>
    <div class="card">
      <div class="card-header bg-info text-white"> <a href="{{this.link}}" style="color:white">{{this.title}}</a>
      </div>
      <div class="card-body">{{this.summary}}
        <button type="button" data-id="{{this._id}}" class="btn btn-warning" id="save-button">SAVE ARTICLE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>